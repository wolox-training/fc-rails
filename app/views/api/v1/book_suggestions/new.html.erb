<script type="text/javascript">
  $(document).ready(function() {
    $('.btn_create_book_suggestion').click(function() {
      $.post('/api/v1/book_suggestions',
        { author: $('#author').val(),
          title: $('#title').val(),
          link: $('#link').val(),
          editorial: $('#editorial').val(),
          publisher: $('#publisher').val(),
          year: $('#year').val(),
          price: $('#price').val(),
          user_id: 1
        },
        function() {
          location.reload();
        }
      );
    });
  });
</script>

